@model IEnumerable<WeddingRestaurant.ViewModels.RoomVM>
@using WeddingRestaurant.Heplers
@{
	ViewData["Title"] = "Checkout";
}
@{
	var firstItem = Model?.FirstOrDefault();
}
<!-- Checkout Page Start -->
<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Billing details</h1>
		<form asp-action="Checkout" asp-controller="Room">
			<div class="row g-5">
					<div class="col-md-12 col-lg-6 col-xl-7">
					<input type="hidden" name="Id" value="@firstItem?.Id" />

						<div class="form-item delivery-info">
							<label class="form-label my-3">Người đặt<sup>*</sup></label>
							<input type="text" name="Name" class="form-control">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">Thời gian tổ chức<sup>*</sup></label>
						<input type="date" name="Time" id="date" min="" max="" class="form-control">
						</div>
						<div class="form-item delivery-info">
							<label class="form-label my-3">Số bàn<sup>*</sup></label>
							<input type="number" name="NumberTable" class="form-control">
						</div>
						<div class="form-item mt-3">
							<textarea name="GhiChu" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Ghi chú"></textarea>
						</div>
						<button type="submit" class="btn border-secondary text-uppercase text-primary w-100 mt-2">Đặt hàng</button>
					</div>
				<div class="col-md-12 col-lg-6 col-xl-5">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">Products</th> 
									<th scope="col">Name</th>
									<th scope="col">Price</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									@foreach (var item in Model)
									{
										<tr>
											<th scope="row">
												<div class="d-flex align-items-center mt-2">
													<img src="~/Image/Room/@item.Image" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" alt="@item.Name">
												</div>
											</th>
											<td class="py-5">@item.Name</td>
											<td class="py-5">@item.Price</td>
										</tr>
									}
								<tr>
									<th scope="row">
									</th>
									<td class="py-5"></td>
									<td class="py-5"></td>
									<td class="py-5">
										<p class="mb-0 text-dark py-3">Subtotal</p>
									</td>
									<td class="py-5">
										<div class="py-3 border-bottom border-top">
											<p class="mb-0 text-dark">$@Model.Sum(p => p.Price).ToVnd()</p>
										</div>
									</td>
								</tr>
								}

								<tr>
									<th scope="row">
									</th>
									<td class="py-5">
										<p class="mb-0 text-dark py-4">Shipping</p>
									</td>
									<td colspan="3" class="py-5">
										<div class="form-check text-start">
											<input type="checkbox" class="form-check-input bg-primary border-0" id="Shipping-1" name="Shipping-1" value="Shipping">
											<label class="form-check-label" for="Shipping-1">Free Shipping</label>
										</div>
										<div class="form-check text-start">
											<input type="checkbox" class="form-check-input bg-primary border-0" id="Shipping-2" name="Shipping-1" value="Shipping">
											<label class="form-check-label" for="Shipping-2">Flat rate: $15.00</label>
										</div>
										<div class="form-check text-start">
											<input type="checkbox" class="form-check-input bg-primary border-0" id="Shipping-3" name="Shipping-1" value="Shipping">
											<label class="form-check-label" for="Shipping-3">Local Pickup: $8.00</label>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">
									</th>
									<td class="py-5">
										<p class="mb-0 text-dark text-uppercase py-3">TOTAL</p>
									</td>
									<td class="py-5"></td>
									<td class="py-5"></td>
									<td class="py-5">
										<div class="py-3 border-bottom border-top">
											<p class="mb-0 text-dark">$135.00</p>
										</div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					
					<div class="row g-4 text-center align-items-center justify-content-center pt-4">
						<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Place Order</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<!-- Checkout Page End -->
@section Scripts {
	<script>

		const dateInput = document.getElementById('date');

		const today = new Date();
		const minDate = new Date(today);
		minDate.setDate(minDate.getDate() + 7);

		const minDateString = minDate.toISOString().split('T')[0];

		dateInput.setAttribute('min', minDateString);

		const threeMonthsLater = new Date();
		threeMonthsLater.setMonth(threeMonthsLater.getMonth() + 3);

		const maxDate = threeMonthsLater.toISOString().split('T')[0];
		dateInput.setAttribute('max', maxDate);

	</script>
}