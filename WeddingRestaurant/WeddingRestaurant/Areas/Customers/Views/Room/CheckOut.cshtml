@model IEnumerable<WeddingRestaurant.ViewModels.RoomVM>
@using WeddingRestaurant.Heplers

@{
    Layout = "~/Areas/Customers/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Checkout";
}

@{
    var firstItem = Model?.FirstOrDefault();
}

<!-- Checkout Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
        <form id="checkoutForm" method="post" asp-action="Checkout" asp-controller="Room">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <input type="hidden" name="Id" value="@firstItem?.Id" />

                    <div class="form-item delivery-info">
                        <label class="form-label my-3">Người đặt<sup>*</sup></label>
                        <input type="text" id="name" name="Name" class="form-control">
                        <span class="text-danger" id="nameError"></span>
                    </div>
                    <div class="form-item delivery-info">
                        <label class="form-label my-3">Thời gian tổ chức<sup>*</sup></label>
                        <input type="date" id="date" name="Time" class="form-control">
                        <span class="text-danger" id="timeError"></span>
                    </div>
                    <div class="form-item delivery-info">
                        <label class="form-label my-3">Số bàn<sup>*</sup></label>
                        <input type="number" id="numberTable" name="NumberTable" class="form-control">
                        <span class="text-danger" id="numberTableError"></span>
                    </div>
                    <div class="form-item mt-3">
                        <textarea id="note" name="Note" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Ghi chú"></textarea>
                    </div>
                    <button type="submit" class="btn border-secondary text-uppercase text-primary w-100 mt-2">Đặt hàng</button>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">
                                                <div class="d-flex align-items-center mt-2">
                                                    <img src="~/Image/Room/@item.Image" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" alt="@item.Name">
                                                </div>
                                            </th>
                                            <td class="py-5">@item.Name</td>
                                            <td class="py-5">@item.Price</td>
                                            <td class="py-5">
                                                <a asp-action="RemoveCart" asp-route-ids="@item.Id" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <th scope="row"></th>
                                        <td class="py-5"></td>
                                        <td class="py-5"></td>
                                        <td class="py-5">
                                            <p class="mb-0 text-dark py-3">Subtotal</p>
                                        </td>
                                        <td class="py-5">
                                            <div class="py-3 border-bottom border-top">
                                                <p class="mb-0 text-dark">$@Model.Sum(p => p.Price).ToVnd()</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dateInput = document.getElementById('date');

            const today = new Date();
            const minDate = new Date(today);
            minDate.setDate(minDate.getDate() + 7);

            const minDateString = minDate.toISOString().split('T')[0];
            dateInput.setAttribute('min', minDateString);

            const threeMonthsLater = new Date();
            threeMonthsLater.setMonth(threeMonthsLater.getMonth() + 3);

            const maxDate = threeMonthsLater.toISOString().split('T')[0];
            dateInput.setAttribute('max', maxDate);

            document.getElementById('checkoutForm').addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent the form from submitting normally

                const name = document.getElementById('name').value.trim();
                const time = document.getElementById('date').value;
                const numberTable = document.getElementById('numberTable').value.trim();
                let isValid = true;

                // Validate name
                if (!name) {
                    document.getElementById('nameError').innerText = "Chưa nhập tên đăng nhập";
                    isValid = false;
                } else {
                    document.getElementById('nameError').innerText = "";
                }

                // Validate time
                if (!time) {
                    document.getElementById('timeError').innerText = "Chưa nhập thời gian tổ chức";
                    isValid = false;
                } else {
                    document.getElementById('timeError').innerText = "";
                }

                // Validate number of tables
                if (!numberTable || isNaN(numberTable) || parseInt(numberTable) <= 0) {
                    document.getElementById('numberTableError').innerText = "Chưa nhập số bàn hợp lệ";
                    isValid = false;
                } else {
                    document.getElementById('numberTableError').innerText = "";
                }

                // If all fields are valid, submit the form
                if (isValid) {
                    this.submit();
                }
            });
        });
    </script>
}
